# AI Dev Local Environment Configuration
# Copy this file to .env and fill in your API keys and settings

# =============================================================================
# LLM Provider API Keys
# =============================================================================

# OpenAI API Key (required for GPT models)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (required for Claude models)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google Gemini API Key (optional)
GEMINI_API_KEY=your-gemini-api-key-here

# Cohere API Key (optional)
COHERE_API_KEY=your-cohere-api-key-here

# =============================================================================
# Service Configuration
# =============================================================================

# Langfuse Settings
TELEMETRY_ENABLED=true
LANGFUSE_ENABLE_EXPERIMENTAL_FEATURES=false
LANGFUSE_PUBLIC_KEY=pk-your-langfuse-public-key
LANGFUSE_SECRET_KEY=sk-your-langfuse-secret-key
LANGFUSE_HOST=http://localhost:3000

# FlowiseAI Settings
DEBUG=false
LOG_LEVEL=info
DISABLE_FLOWISE_TELEMETRY=false
TOOL_FUNCTION_BUILTIN_DEP=crypto,fs
TOOL_FUNCTION_EXTERNAL_DEP=moment,lodash

# FlowiseAI JWT Authentication
JWT_AUTH_TOKEN_SECRET=AABBCCDDAABBCCDDAABBCCDDAABBCCDDAABBCCDD
JWT_REFRESH_TOKEN_SECRET=AABBCCDDAABBCCDDAABBCCDDAABBCCDDAABBCCDD
JWT_ISSUER=AI-Dev-Local
JWT_AUDIENCE=AI-Dev-Local
JWT_TOKEN_EXPIRY_IN_MINUTES=360
JWT_REFRESH_TOKEN_EXPIRY_IN_MINUTES=43200

# Open WebUI Settings
OLLAMA_BASE_URL=http://host.docker.internal:11434
OPENAI_API_BASE_URL=http://litellm:4000/v1
WEBUI_SECRET_KEY=your-webui-secret-key
WEBUI_JWT_SECRET_KEY=your-jwt-secret-key
DEFAULT_MODELS=gpt-3.5-turbo,gpt-4,claude-3-sonnet
DEFAULT_USER_ROLE=admin
ENABLE_SIGNUP=true
ENABLE_LOGIN_FORM=true
WEBUI_NAME=AI Dev Local

# LiteLLM Proxy Settings
LITELLM_MASTER_KEY=sk-your-litellm-master-key
LITELLM_DATABASE_URL=postgresql://postgres:postgres@postgres:5432/litellm
LITELLM_UI_USERNAME=admin
LITELLM_UI_PASSWORD=admin123

# LiteLLM Logging and Debug
LITELLM_LOG=INFO
LITELLM_DEBUG=false

# Redis Settings (optional password)
REDIS_PASSWORD=

# Dashboard Settings
DASHBOARD_TITLE=AI Dev Local Dashboard

# MkDocs Settings
MKDOCS_DEV_ADDR=0.0.0.0:8000
MKDOCS_SITE_URL=http://localhost:8000

# =============================================================================
# Development Settings
# =============================================================================

# Enable/disable specific features during development
TOOL_FUNCTION_BUILTIN_DEP=crypto,fs
TOOL_FUNCTION_EXTERNAL_DEP=moment,lodash

# Database settings (usually don't need to change)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres

# =============================================================================
# MCP (Model Context Protocol) Settings
# =============================================================================

# Git configuration for MCP Git server
GIT_AUTHOR_NAME=AI Dev Local
GIT_AUTHOR_EMAIL=dev@local.ai

# Timezone for MCP Time server
TIMEZONE=UTC

# GitHub MCP Server Settings
GITHUB_PERSONAL_ACCESS_TOKEN=your-github-pat-here
GITHUB_TOOLSETS=repos,issues,pull_requests,actions,code_security,context
GITHUB_READ_ONLY=false

# GitLab MCP Server Settings (optional)
GITLAB_TOKEN=your-gitlab-token-here
GITLAB_URL=https://gitlab.com

# SonarQube MCP Server Settings (optional)
SONARQUBE_URL=http://localhost:9000
SONARQUBE_TOKEN=your-sonarqube-token-here
