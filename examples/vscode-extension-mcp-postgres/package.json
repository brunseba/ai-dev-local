{
  "name": "ai-dev-local-mcp",
  "displayName": "AI Dev Local - MCP Integration",
  "description": "VS Code extension for interacting with AI Dev Local MCP servers",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Data Science",
    "Machine Learning"
  ],
  "keywords": [
    "mcp",
    "postgresql",
    "database",
    "ai",
    "model-context-protocol"
  ],
  "activationEvents": [
    "onCommand:ai-dev-local.listTables",
    "onCommand:ai-dev-local.describeTable",
    "onCommand:ai-dev-local.queryDatabase",
    "onView:mcpExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-dev-local.listTables",
        "title": "List Database Tables",
        "category": "AI Dev Local"
      },
      {
        "command": "ai-dev-local.describeTable",
        "title": "Describe Table",
        "category": "AI Dev Local"
      },
      {
        "command": "ai-dev-local.queryDatabase",
        "title": "Query Database",
        "category": "AI Dev Local"
      },
      {
        "command": "ai-dev-local.refreshMcpExplorer",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "ai-dev-local.connectMcp",
        "title": "Connect to MCP Server",
        "category": "AI Dev Local"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "mcpExplorer",
          "name": "MCP Database Explorer",
          "when": "true"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "ai-dev-local.refreshMcpExplorer",
          "when": "view == mcpExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "ai-dev-local.describeTable",
          "when": "view == mcpExplorer && viewItem == table",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "AI Dev Local MCP",
      "properties": {
        "ai-dev-local.mcpServer.host": {
          "type": "string",
          "default": "localhost",
          "description": "MCP server host"
        },
        "ai-dev-local.mcpServer.port": {
          "type": "number",
          "default": 9006,
          "description": "MCP PostgreSQL server port"
        },
        "ai-dev-local.mcpServer.autoConnect": {
          "type": "boolean",
          "default": true,
          "description": "Automatically connect to MCP server on startup"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
