{
  "mcpServers": {
    "postgres-http": {
      "name": "PostgreSQL MCP Server (HTTP)",
      "description": "PostgreSQL database server via HTTP wrapper",
      "type": "http",
      "baseUrl": "http://localhost:9006",
      "healthEndpoint": "/health",
      "timeout": 30000,
      "authentication": {
        "type": "none"
      },
      "tools": {
        "list_tables": {
          "method": "POST",
          "endpoint": "/tools/list_tables",
          "description": "List all database tables",
          "parameters": {}
        },
        "describe_table": {
          "method": "POST", 
          "endpoint": "/tools/describe_table",
          "description": "Get table schema information",
          "parameters": {
            "table_name": {
              "type": "string",
              "required": true,
              "description": "Name of the table to describe"
            }
          }
        },
        "execute_query": {
          "method": "POST",
          "endpoint": "/tools/execute_query", 
          "description": "Execute SQL query",
          "parameters": {
            "query": {
              "type": "string",
              "required": true,
              "description": "SQL query to execute"
            }
          }
        },
        "get_table_schema": {
          "method": "POST",
          "endpoint": "/tools/get_table_schema",
          "description": "Get detailed table schema",
          "parameters": {
            "table_name": {
              "type": "string", 
              "required": true,
              "description": "Table name"
            }
          }
        }
      }
    },
    "github-http": {
      "name": "GitHub MCP Server (HTTP)",
      "description": "GitHub integration via HTTP wrapper",
      "type": "http",
      "baseUrl": "http://localhost:9008",
      "healthEndpoint": "/health",
      "timeout": 30000,
      "authentication": {
        "type": "none"
      }
    }
  },
  "profiles": {
    "development": {
      "postgres-http": {
        "baseUrl": "http://localhost:9006",
        "debug": true,
        "logLevel": "verbose"
      }
    },
    "production": {
      "postgres-http": {
        "baseUrl": "http://postgres-mcp:8000",
        "debug": false,
        "logLevel": "error"
      }
    }
  },
  "clients": {
    "vscode": {
      "servers": ["postgres-http"],
      "autoConnect": true,
      "showInExplorer": true
    },
    "web-interface": {
      "servers": ["postgres-http", "github-http"],
      "cors": {
        "enabled": true,
        "origins": ["http://localhost:3000", "http://localhost:8080"]
      }
    }
  }
}
